<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/moviesFragment">

    <fragment
            android:id="@+id/moviesFragment"
            android:name="com.github.mbarrben.moviedb.movies.ui.view.MoviesFragment"
            android:label="fragment_movies"
            tools:layout="@layout/movies_fragment">

        <action
                android:id="@+id/action_movies_to_detail"
                app:destination="@id/detailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
        />

    </fragment>

    <fragment
            android:id="@+id/detailFragment"
            android:name="com.github.mbarrben.moviedb.detail.ui.view.DetailFragment"
            android:label="fragment_detail"
            tools:layout="@layout/detail_fragment">

        <argument
                android:name="movie"
                app:argType="com.github.mbarrben.moviedb.movies.domain.Movie"
        />

    </fragment>

</navigation>